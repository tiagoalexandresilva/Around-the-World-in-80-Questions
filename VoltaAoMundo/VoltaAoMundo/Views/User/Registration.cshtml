@model VoltaAoMundo.Models.Utilizador

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    <div class="form-horizontal" role="form">
        <h2 style="padding-left: 50px; color: #ff0000; font-family: 'Montserrat', sans-serif;">Novo Registo.</h2>
        <h4 style="padding-left: 50px; font-family: 'Montserrat', sans-serif;">Crie um novo registo.</h4>
        <hr />
        <div class="form-group">
            <div style="padding-left:225px">
                @Html.ValidationSummary(true, "Erro ao criar novo registo.")
            </div>
            @Html.LabelFor(u => u.username, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(u => u.username, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.username)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(u => u.password, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.password)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input style="outline:none" type="submit" class="btn btn-default" value="Submeter" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
