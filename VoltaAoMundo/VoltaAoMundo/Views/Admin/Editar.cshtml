@model VoltaAoMundo.Models.Pergunta
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal" role="form">
        <h2 style="padding-left: 50px; color: #ff0000; font-family: 'Montserrat', sans-serif;">Administração.</h2>
        <h4 style="padding-left: 50px; font-family: 'Montserrat', sans-serif;">Edite a pergunta.</h4>
        <hr />
        <div class="form-group">
            @Html.HiddenFor(p => p.idPergunta)
            @Html.LabelFor(p => p.idRegiao, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <select id="idRegiao" name="idRegiao" class="form-control">
                    @foreach (var item in ViewBag.Regioes)
                    {
                        <option value="@item.id">
                            @item.nomeRegiao
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.nTema, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <select id="nTema" name="nTema" class="form-control">
                    @foreach (var item in ViewBag.LTemas)
                    {
                        <option>
                            @item.nome
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.dificuldade, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <select id="dificuldade" name="dificuldade" class="form-control">
                    <option>
                        @Html.Raw("1")
                    </option>
                    <option>
                        @Html.Raw("2")
                    </option>
                    <option>
                        @Html.Raw("3")
                    </option>
                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.pergunta, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(p => p.pergunta, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.pergunta)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.resposta, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(p => p.resposta, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.resposta)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.opcao1, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(p => p.opcao1, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.opcao1)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.opcao2, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(p => p.opcao2, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.opcao2)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.opcao3, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(p => p.opcao3, new { @class = "form-control" })
                @Html.ValidationMessageFor(p => p.opcao3)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input style="outline: none;" type="submit" class="btn btn-default" value="Actualizar" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
