@model IEnumerable<VoltaAoMundo.Models.Pergunta>
@{
    ViewBag.Title = "EditarPerguntas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal" role="form">
        <h2 style="padding-left: 50px; color: #ff0000; font-family: 'Montserrat', sans-serif;">Administração.</h2>
        <h4 style="padding-left: 50px; font-family: 'Montserrat', sans-serif;">Seleccione uma pergunta para editar dados.</h4>
        <hr />
        <div class="form-group">
            <div class="form-group" style="padding-left: 50px; padding-right: 45px;">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.pergunta)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.resposta)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.opcao1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.opcao2)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.opcao3)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.pergunta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.resposta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.opcao1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.opcao2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.opcao3)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", "Admin", new { id = item.idPergunta }, new { @class = "btn btn-default" })
                            </td>
                        </tr>
                    }
                </table>

            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

