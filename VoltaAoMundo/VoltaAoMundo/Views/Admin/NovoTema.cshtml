@model VoltaAoMundo.Models.Tema
@{
    ViewBag.Title = "NovoTema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal" role="form">
        <h2 style="padding-left: 50px; color: #ff0000; font-family: 'Montserrat', sans-serif;">Administração.</h2>
        <h4 style="padding-left: 50px; font-family: 'Montserrat', sans-serif;">Adicione um novo tema ao contexto de jogo.</h4>
        <hr />
        <div class="form-group">
            <div style="padding-left:225px">
                @Html.ValidationSummary(true, "Erro ao adicionar novo tema.")
            </div>
            @Html.LabelFor(t => t.nome, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(t => t.nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(t => t.nome)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input style="outline:none;" type="submit" class="btn btn-default" value="Submeter" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
